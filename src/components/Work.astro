---
import WorkCard from './WorkCard.astro';
import FigmaCard from './FigmaCard.astro';
import Skills from './Skills.astro';
import Process from './Process.astro';
import pageUpImage from '../assets/PageUp.svg';
import challongeImage from '../assets/Challonge.svg';
import twitchImage from '../assets/Twitch.svg';
---

<section id="work" class="w-full max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 lg:py-20">
	<h1 class="text-3xl sm:text-4xl font-bold mb-8 sm:mb-12">Work</h1>
	<WorkCard
		title="Redefining the job requisition experience: a visionary platform redesign driven by user discovery and validation"
		description="Establishing modern, standardized UI patterns for PageUp's Jobs Platform, earning key stakeholder validation and a prestigious company award nomination."
		tags={["B2B SaaS", "Enterprise Design", "User Research"]}
		imageSrc={pageUpImage.src}
		imageAlt="PageUp Jobs Platform"
		href="/pageup"
	/>
	<WorkCard
		title="Defining the DNA: Creating a design dystem from the ground Up for Logitech G - Challonge"
		description="Building a &quot;source of truth&quot; from the ground up. This zero-to-one initiative established Challonge's first foundational design system, delivering a scalable library of tokens and components to align design and engineering teams."
		tags={["B2B SaaS", "Enterprise Design", "User Research"]}
		imageSrc={challongeImage.src}
		imageAlt="Challonge Design System"
		href="/challonge"
	/>
	
	<!-- Want to see more section -->
	<div class="mt-12 sm:mt-16">
		<h2 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-6 sm:mb-8">Want to see more?</h2>
		<FigmaCard />
	</div>

	<Skills />
	<Process />
</section>
