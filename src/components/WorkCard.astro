---
interface Props {
	title: string;
	description: string;
	tags: string[];
	imageSrc?: string;
	imageAlt?: string;
	href?: string;
}

const { title, description, tags, imageSrc, imageAlt = "Project preview", href } = Astro.props;
---

{href ? (
	<a href={href} class="block focus:outline-none focus-visible:ring-4 focus-visible:ring-indigo-200 rounded-2xl transition duration-200 hover:-translate-y-1 hover:shadow-xl">
		<div class="relative overflow-hidden rounded-2xl bg-white shadow-lg border border-slate-100 my-10">
			<div class="flex flex-col lg:flex-row md:p-8">
				<div class="flex flex-row gap-4">
					{imageSrc && (
						<div class="relative w-full lg:w-1/2 rounded-lg overflow-hidden">
							<img 
								src={imageSrc} 
								alt={imageAlt} 
								class="w-full h-full object-cover min-h-[300px] lg:min-h-[400px]"
							/>
						</div>
					)}
					
					<div class="flex flex-col justify-between w-full lg:w-1/2 px-4 lg:px-4">
						<div class="flex flex-col">
							<h2 class="text-3xl lg:text-2xl font-bold text-slate-900 mb-4 leading-tight">
								{title}
							</h2>
							<p class="text-base lg:text-lg text-slate-600 mb-6 leading-relaxed">
								{description}
							</p>
						</div>
						<div class="flex flex-wrap gap-3">
							{tags.map((tag) => (
								<span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-slate-100 text-slate-700">
									{tag}
								</span>
							))}
						</div>
					</div>
				</div>
			</div>
		</div>
	</a>
) : (
	<div class="relative overflow-hidden rounded-2xl bg-white shadow-lg border border-slate-100 my-10">
		<div class="flex flex-col lg:flex-row md:p-8">
			<div class="flex flex-row gap-4">
				{imageSrc && (
					<div class="relative w-full lg:w-1/2 rounded-lg overflow-hidden">
						<img 
							src={imageSrc} 
							alt={imageAlt} 
							class="w-full h-full object-cover min-h-[300px] lg:min-h-[400px]"
						/>
					</div>
				)}
				
				<div class="flex flex-col justify-between w-full lg:w-1/2 px-4 lg:px-4">
					<div class="flex flex-col">
						<h2 class="text-3xl lg:text-2xl font-bold text-slate-900 mb-4 leading-tight">
							{title}
						</h2>
						<p class="text-base lg:text-lg text-slate-600 mb-6 leading-relaxed">
							{description}
						</p>
					</div>
					<div class="flex flex-wrap gap-3">
						{tags.map((tag) => (
							<span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-slate-100 text-slate-700">
								{tag}
							</span>
						))}
					</div>
				</div>
			</div>
		</div>
	</div>
)}

