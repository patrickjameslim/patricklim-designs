---
interface Props {
	title: string;
	description: string;
	tags: string[];
	imageSrc?: string;
	imageAlt?: string;
	href?: string;
}

const { title, description, tags, imageSrc, imageAlt = "Project preview", href } = Astro.props;
---

{href ? (
	<a href={href} class="block focus:outline-none focus-visible:ring-4 focus-visible:ring-indigo-200 rounded-2xl transition duration-200 hover:-translate-y-1 hover:shadow-xl">
		<div class="relative overflow-hidden rounded-2xl bg-white shadow-lg border border-slate-100 my-6 sm:my-8 lg:my-10">
			<div class="flex flex-col lg:flex-row p-4 sm:p-6 lg:p-8">
				{imageSrc && (
					<div class="relative w-full lg:w-1/2 rounded-lg overflow-hidden mb-4 lg:mb-0 lg:mr-6">
						<img 
							src={imageSrc} 
							alt={imageAlt} 
							class="w-full h-full object-cover min-h-[250px] sm:min-h-[300px] lg:min-h-[400px]"
						/>
					</div>
				)}
				
				<div class="flex flex-col justify-between w-full lg:w-1/2">
					<div class="flex flex-col">
						<h2 class="text-xl sm:text-2xl lg:text-3xl font-bold text-slate-900 mb-3 sm:mb-4 leading-tight">
							{title}
						</h2>
						<p class="text-sm sm:text-base lg:text-lg text-slate-600 mb-4 sm:mb-6 leading-relaxed">
							{description}
						</p>
					</div>
					<div class="flex flex-wrap gap-2 sm:gap-3">
						{tags.map((tag) => (
							<span class="inline-flex items-center px-3 sm:px-4 py-1.5 sm:py-2 rounded-full text-xs sm:text-sm font-medium bg-slate-100 text-slate-700">
								{tag}
							</span>
						))}
					</div>
				</div>
			</div>
		</div>
	</a>
) : (
	<div class="relative overflow-hidden rounded-2xl bg-white shadow-lg border border-slate-100 my-6 sm:my-8 lg:my-10">
		<div class="flex flex-col lg:flex-row p-4 sm:p-6 lg:p-8">
			{imageSrc && (
				<div class="relative w-full lg:w-1/2 rounded-lg overflow-hidden mb-4 lg:mb-0 lg:mr-6">
					<img 
						src={imageSrc} 
						alt={imageAlt} 
						class="w-full h-full object-cover min-h-[250px] sm:min-h-[300px] lg:min-h-[400px]"
					/>
				</div>
			)}
			
			<div class="flex flex-col justify-between w-full lg:w-1/2">
				<div class="flex flex-col">
					<h2 class="text-xl sm:text-2xl lg:text-3xl font-bold text-slate-900 mb-3 sm:mb-4 leading-tight">
						{title}
					</h2>
					<p class="text-sm sm:text-base lg:text-lg text-slate-600 mb-4 sm:mb-6 leading-relaxed">
						{description}
					</p>
				</div>
				<div class="flex flex-wrap gap-2 sm:gap-3">
					{tags.map((tag) => (
						<span class="inline-flex items-center px-3 sm:px-4 py-1.5 sm:py-2 rounded-full text-xs sm:text-sm font-medium bg-slate-100 text-slate-700">
							{tag}
						</span>
					))}
				</div>
			</div>
		</div>
	</div>
)}

