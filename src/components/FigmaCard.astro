---
const figmaUrl = "https://www.figma.com/design/JRe1OKyO3ZvFqgfxyEGSW2/Patrick-Lim---Portfolio?node-id=0-1&t=GjDpLcy8ATmjFTNs-1";
---

<a 
	href={figmaUrl} 
	target="_blank" 
	rel="noopener noreferrer"
	class="block focus:outline-none focus-visible:ring-4 focus-visible:ring-indigo-200 rounded-2xl transition duration-200 hover:-translate-y-1 hover:shadow-xl"
>
	<div class="relative overflow-hidden rounded-2xl bg-white shadow-lg border border-slate-100 my-10">
		<div class="flex flex-col lg:flex-row md:p-8">
			<div class="flex flex-row gap-4">
				<!-- Left side: Figma logo in black rectangle -->
				<div class="relative w-full lg:w-1/2 rounded-lg overflow-hidden bg-black flex items-center justify-center p-12 min-h-[300px] lg:min-h-[400px]">
					<!-- Figma Logo -->
					<svg width="120" height="120" viewBox="0 0 120 120" fill="none" xmlns="http://www.w3.org/2000/svg">
						<!-- Orange shape (top) -->
						<rect x="20" y="20" width="40" height="40" rx="8" fill="#FF7262"/>
						<!-- Purple shape (middle left) -->
						<rect x="20" y="60" width="40" height="40" rx="8" fill="#A259FF"/>
						<!-- Blue shape (middle right) -->
						<rect x="60" y="60" width="40" height="40" rx="8" fill="#1ABCFE"/>
						<!-- Green shape (bottom) -->
						<rect x="20" y="100" width="40" height="40" rx="8" fill="#0ACF83"/>
						<!-- Light orange/pink shape (top right) -->
						<rect x="60" y="20" width="40" height="40" rx="8" fill="#F24E1E"/>
					</svg>
				</div>
				
				<!-- Right side: Content -->
				<div class="flex flex-col justify-between w-full lg:w-1/2 px-4 lg:px-4">
					<div class="flex flex-col">
						<h2 class="text-3xl lg:text-2xl font-bold text-slate-900 mb-4 leading-tight">
							The Extended Design Archive
						</h2>
						<p class="text-base lg:text-lg text-slate-600 mb-6 leading-relaxed">
							Ready for more? Dive into a Figma file containing a curated selection of additional UI/UX projects, including explorations in B2B SaaS, consumer-facing platforms, and quick turnaround time UI design projects.
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</a>

