---
const figmaUrl = "https://www.figma.com/design/JRe1OKyO3ZvFqgfxyEGSW2/Patrick-Lim---Portfolio?node-id=0-1&t=GjDpLcy8ATmjFTNs-1";
---

<a 
	href={figmaUrl} 
	target="_blank" 
	rel="noopener noreferrer"
	class="block focus:outline-none focus-visible:ring-4 focus-visible:ring-indigo-200 rounded-2xl transition duration-200 hover:-translate-y-1 hover:shadow-xl"
>
	<div class="relative overflow-hidden rounded-2xl bg-white shadow-lg border border-slate-100 my-6 sm:my-8 lg:my-10">
		<div class="flex flex-col lg:flex-row p-4 sm:p-6 lg:p-8">
			<!-- Left side: Figma logo in black rectangle -->
			<div class="relative w-full lg:w-1/2 rounded-lg overflow-hidden bg-black flex items-center justify-center p-8 sm:p-12 min-h-[250px] sm:min-h-[300px] lg:min-h-[400px] mb-4 lg:mb-0 lg:mr-6">
				<!-- Figma Logo -->
				<svg class="w-20 h-20 sm:w-24 sm:h-24 lg:w-32 lg:h-32" viewBox="0 0 140 140" fill="none" xmlns="http://www.w3.org/2000/svg">
					<!-- Orange shape (top) -->
					<rect x="20" y="20" width="40" height="40" rx="12" fill="#FF7262"/>
					<!-- Purple shape (middle left) -->
					<rect x="20" y="60" width="40" height="40" rx="12" fill="#A259FF"/>
					<!-- Blue shape (middle right) -->
					<rect x="60" y="60" width="40" height="40" rx="12" fill="#1ABCFE"/>
					<!-- Green shape (bottom) -->
					<rect x="20" y="100" width="40" height="40" rx="12" fill="#0ACF83"/>
					<!-- Light orange/pink shape (top right) -->
					<rect x="60" y="20" width="40" height="40" rx="12" fill="#F24E1E"/>
				</svg>
			</div>
			
			<!-- Right side: Content -->
			<div class="flex flex-col justify-between w-full lg:w-1/2">
				<div class="flex flex-col">
					<h2 class="text-xl sm:text-2xl lg:text-3xl font-bold text-slate-900 mb-3 sm:mb-4 leading-tight">
						The Extended Design Archive
					</h2>
					<p class="text-sm sm:text-base lg:text-lg text-slate-600 mb-4 sm:mb-6 leading-relaxed">
						Ready for more? Dive into a Figma file containing a curated selection of additional UI/UX projects, including explorations in B2B SaaS, consumer-facing platforms, and quick turnaround time UI design projects.
					</p>
				</div>
			</div>
		</div>
	</div>
</a>

